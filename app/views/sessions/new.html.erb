<div class="block" id="block-login">
  <h2>Log in</h2>
  <div class="content login">
    <div class="flash">
      <% flash.each do |type, message| %>
        <div class="message notice">
          <p>
            <%= message %>
          </p>
        </div>
      <% end %>
    </div>
  <%= form_tag do %>
    <fieldset>
      <legend>Please Log In</legend>
      <div class="group wat-cf">
        <div class="left">
          <%= label_tag :email, 'Email:' %>
        </div>
        <div class="right">
        <%= text_field_tag :email, params[:email] %>
        </div>
      </div>
      <div class="group wat-cf">
        <div class="left"><%= label_tag :password, 'Password:' %></div>
        <div class="right"><%= password_field_tag :password, params[:password] %></div>
      </div>
      <div class="group wat-cf">
        <div class="right"><div class="button"><%= submit_tag "Login" %></div></div>
      </div>
    </fieldset>
  <% end %>
  </div>
</div>

<br><%= link_to 'Do not have an account? Please register', new_user_path%>